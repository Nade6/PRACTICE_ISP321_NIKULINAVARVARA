<Page x:Class="Practice2024isp321NikulinaVarvara.Pages.KeyboardInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice2024isp321NikulinaVarvara.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Информация о клавиатурах">

    <Grid>
        <DataGrid Name="KeyboardsDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,100,10,50" AutoGenerateColumns="False">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Название" Binding="{Binding keyboardName}" />
                <DataGridTextColumn Header="Тип" Binding="{Binding typeKeyboard}" />
                <DataGridTextColumn Header="Интерфейс" Binding="{Binding interfaceConnection}" />
                <DataGridTextColumn Header="Беспроводная" Binding="{Binding wireless}" />
                <DataGridTextColumn Header="Работоспособность" Binding="{Binding efficiency}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10" Click="BackButton_Click"/>
    </Grid>
</Page>
